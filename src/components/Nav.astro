---
import Icon, { type Props as IconProps } from './Icon.astro';
import ThemeToggle from './ThemeToggle.astro';

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
	{ label: 'Home', href: '/' },
	{ label: 'Work', href: '/work/' },
	{ label: 'About', href: '/about/' },
];

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: { label: string; href: string; icon: IconProps['icon'] }[] = [
	{ label: 'Twitter', href: 'https://twitter.com/bearish_bulls', icon: 'twitter-logo' },
	{ label: 'Twitch', href: 'https://www.twitch.tv/antman2022', icon: 'twitch-logo' },
	{ label: 'GitHub', href: 'https://www.github.com/ap519925', icon: 'github-logo' },
	{ label: 'YouTube', href: 'https://www.youtube.com/@jpowbrrrrrr', icon: 'youtube-logo' },
];
---

<nav>
	<div class="menu-header">
		<a href="/" class="site-title">
			<img src="/assets/alogo.png" width="150" height="150" alt="Logo">
		</a>

		<menu-button>
			<button class="menu-button" aria-expanded="false">
				<span class="sr-only">Menu</span>
				<div class="icon-wrapper">
					<span class="menu-icon"><Icon icon="list" /></span>
					<span class="close-icon"><Icon icon="close" /></span>
				</div>
			</button>
		</menu-button>

	</div>
	<div id="menu-content">
		<div class="menu-container">
			<ul class="nav-items">
				{
					textLinks.map(({ label, href }) => (
						<li>
							<a
								aria-current={Astro.url.pathname === href}
								class:list={[
									'link',
									{
										active:
											Astro.url.pathname === href ||
											(href !== '/' && Astro.url.pathname.startsWith(href)),
									},
								]}
								href={href}
							>
								{label}
							</a>
						</li>
					))
				}
			</ul>
			<div class="menu-footer">
				<div class="socials">
					{
						iconLinks.map(({ href, icon, label }) => (
							<a href={href} class="social">
								<span class="sr-only">{label}</span>
								<Icon icon={icon} />
							</a>
						))
					}
				</div>
				<div class="theme-toggle">
					<ThemeToggle />
				</div>
			</div>
		</div>
	</div>
</nav>

<script>
	class MenuButton extends HTMLElement {
		private btn: HTMLButtonElement;
		private menu: HTMLElement;
		private menuItems: NodeListOf<Element>;
		private isExpanded: boolean = false;
		private clickHandler: () => void;
		private linkClickHandlers: Map<HTMLElement, () => void> = new Map();

		constructor() {
			super();
			this.initialize();
		}

		private initialize() {
			this.btn = this.querySelector('button')!;
			this.menu = document.getElementById('menu-content')!;
			this.menuItems = this.menu.querySelectorAll('.nav-items li, .menu-footer');

			// Add item index for staggered animations
			this.menuItems.forEach((item, index) => {
				(item as HTMLElement).style.setProperty('--item-index', index.toString());
			});

			// Bind the click handler
			this.clickHandler = () => this.setExpanded(!this.isExpanded);
			this.btn.addEventListener('click', this.clickHandler);

			// Reset overflow and close menu when clicking navigation links
			const navLinks = document.querySelectorAll('a[href]');
			navLinks.forEach(link => {
				const handler = () => {
					this.setExpanded(false);
					document.body.style.overflow = '';
				};
				this.linkClickHandlers.set(link as HTMLElement, handler);
				link.addEventListener('click', handler);
			});

			// Close menu on escape key
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape' && this.isExpanded) {
					this.setExpanded(false);
				}
			});

			// Close menu when clicking outside
			document.addEventListener('click', (e) => {
				if (this.isExpanded && !this.contains(e.target as Node)) {
					this.setExpanded(false);
				}
			});
		}

		private setExpanded(expand: boolean) {
			if (this.isExpanded === expand) return;
			
			this.isExpanded = expand;
			this.btn.setAttribute('aria-expanded', expand ? 'true' : 'false');
			
			if (expand) {
				document.body.style.overflow = 'hidden';
				this.menu.classList.add('show');
				// Trigger animations after a small delay
				requestAnimationFrame(() => {
					this.menuItems.forEach((item) => {
						item.classList.add('show');
					});
				});
			} else {
				document.body.style.overflow = '';
				this.menuItems.forEach((item) => {
					item.classList.remove('show');
				});
				this.menu.classList.remove('show');
			}
		}

		connectedCallback() {
			// Re-initialize when component is added to the DOM
			this.initialize();
		}

		disconnectedCallback() {
			// Clean up when component is removed
			document.body.style.overflow = '';
			this.btn.removeEventListener('click', this.clickHandler);
			
			// Remove all link click handlers
			this.linkClickHandlers.forEach((handler, link) => {
				link.removeEventListener('click', handler);
			});
			this.linkClickHandlers.clear();
		}
	}
	customElements.define('menu-button', MenuButton);

</script>

<style>
	nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 9999;
		font-family: var(--font-brand);
		font-weight: 500;
	}

	.menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem;
	}

	.site-title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		line-height: 1.1;
		color: var(--gray-0);
		text-decoration: none;
	}

	.site-title img {
		width: 2.5rem;
		height: 2.5rem;
	}

	.menu-button {
		position: relative;
		display: flex;
		z-index: 9999;
		border: 0;
		border-radius: 999rem;
		padding: 0.5rem;
		font-size: 2.5rem;
		color: var(--gray-300);
		transition: all 0.3s ease;
	}

	.icon-wrapper {
		position: relative;
		width: 1.5rem;
		height: 1.5rem;
	}

	.menu-icon,
	.close-icon {
		position: absolute;
		top: 0;
		left: 0;
		transition: opacity 0.3s ease, transform 0.3s ease;
	}

	.close-icon {
		opacity: 0;
		transform: scale(0);
	}

	.menu-button[aria-expanded='true'] .menu-icon {
		opacity: 0;
		transform: scale(0);
	}

	.menu-button[aria-expanded='true'] .close-icon {
		opacity: 1;
		transform: scale(1);
	}

	.menu-button[aria-expanded='true'] {
		color: var(--gray-0);

		background: transparent;
		cursor: pointer;
		z-index: 20;
	}

	#menu-content {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: hsla(233, 47%, 18%, 0.75);
		backdrop-filter: blur(1rem);
		opacity: 0;
		visibility: hidden;
		pointer-events: none;
		transition: opacity 0.3s ease, visibility 0s linear 0.3s;
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		padding-top: 5rem;
	}

	#menu-content.show {
		opacity: 1;
		visibility: visible;
		pointer-events: auto;
		transition: opacity 0.3s ease, visibility 0s linear;
	}

	.menu-container {
		width: 100%;
		max-width: 32rem;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 3rem;
		padding: 0 2rem;
		margin-top: -5rem;
	}

	.nav-items {
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		font-size: var(--text-2xl);
		text-align: center;
		list-style: none;
		padding: 0;
		width: 100%;
		flex: 1;
		justify-content: center;
	}

	.nav-items li {
		opacity: 0;
		transform: translateY(1rem);
		transition: all 0.3s ease;
		transition-delay: calc(var(--item-index) * 0.1s);
	}

	.nav-items li.show {
		opacity: 1;
		transform: translateY(0);
	}

	.link {
		display: block;
		color: var(--gray-300);
		text-decoration: none;
		font-size: var(--text-2xl);
		padding: 0.5rem;
		transition: all 0.3s ease;
		position: relative;
	}

	.link:hover,
	.link:focus {
		color: var(--gray-0);
		transform: scale(1.1);
	}

	.link.active {
		color: var(--accent-regular);
	}

	.link::before {
		content: '';
		position: absolute;
		width: 0;
		height: 2px;
		bottom: 0;
		left: 50%;
		background-color: var(--accent-regular);
		transition: all 0.3s ease;
		transform: translateX(-50%);
	}

	.link:hover::before,
	.link:focus::before,
	.link.active::before {
		width: 100%;
	}

	.menu-footer {
		opacity: 0;
		transform: translateY(1rem);
		transition: all 0.3s ease;
		transition-delay: calc(var(--item-index) * 0.1s);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		width: 100%;
		padding-top: 2rem;
		border-top: 1px solid var(--gray-800);
	}

	.menu-footer.show {
		opacity: 1;
		transform: translateY(0);
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		font-size: var(--text-xl);
		justify-content: center;
	}

	.social {
		color: var(--gray-300);
		display: flex;
		padding: 0.5rem;
		text-decoration: none;
		transition: all 0.3s ease;
		border-radius: 50%;
	}

	.social:hover,
	.social:focus {
		color: var(--gray-0);
		transform: translateY(-3px);
		background: var(--gradient-subtle);
	}

	@media (min-width: 60em) {
		.socials {
			display: flex;
			justify-content: flex-end;
			gap: 0;
		}
	}
	
	@media (min-width: 50em) {
		.menu-header {
			padding: 1.5rem 2rem;
		}

		.site-title img {
			width: 3rem;
			height: 3rem;
		}

		.menu-container {
			max-width: 40rem;
			padding: 0 4rem;
		}

		.nav-items {
			gap: 2.5rem;
		}

		.link {
			font-size: var(--text-2xl);

		}
	}
</style>
