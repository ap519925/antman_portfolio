---
import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="About | Anthony Phillips" description="About Anthony Phillips">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="Read below to learn a little bit more about me."
			>
				<img
					width="800"
					height="400"
					src="/assets/at-work.webp"
					alt="anthony phillips at work with a colleague"
				/>
			</Hero>
			<section>
				<h2 class="section-title">About me</h2>
				<div class="content">
					<p>
						Hello everyone, my name is Anthony Phillips. I was born and raised in Albany NY, the capitol of NY state.
						I've been living in Queens NYC since about 2016/17 working as a web developer & financial market analyst/trader.
						I also run an Airbnb, and a few E-commerce shops. When I'm not working on projects, I greatly enjoy playing PC games, tennis, soccer, pickleball and with my dog bear.
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>BA in Information & Computer Science - SUNY Albany</p>
					<p>MSIS Incomplete 12 credits - SUNY Albany</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<div class="pillnav container m-auto">
						<h2 class="pillhead">Programming Languages & other Development technologies</h2>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills html5">HTML5</div>
							<div class="pills css3">CSS3</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills js">JavaScript</div>
							<div class="pills php">PHP</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills java">Java</div>
							<div class="pills ruby">Ruby</div>
						</div>
						<div style="margin-top:0.5rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills jquery">jQuery</div>
							<div class="pills python">Python</div>
						</div>
						<div style="margin-top:0.5rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills pinescript">PineScript</div>
							<div class="pills sql">SQL/PLSQL</div>
						</div>
						<div style="margin-top:0.5rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills react">React JS</div>
							<div class="pills angular">Svelte</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills astrojs">Astro JS</div>
							<div class="pills angular">Angular JS</div>
							<div class="pills angular">Typescript</div>
						</div>

						<h2 class="pillhead">CSS & templating</h2>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills bootstrap">Bootstrap</div>
							<div class="pills twig">Foundation</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills bootstrap">Pure.css</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills tailwind">Tailwind CSS</div>
							<div class="pills twig">Twig</div>
							<div class="pills sass">Sass</div>
						</div>
						<h2 class="pillhead">CMS & other programs</h2>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills drupal">Drupal</div>
							<div class="pills wordpress">Wordpress</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills joomla">Joomla!</div>
							<div class="pills wordpress">Netlify</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills peoplesoft">Peoplesoft</div>
							<div class="pills adobe">Adobe CS</div>
						</div>
						<div style="margin-top:0.5rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills google">Google Suite</div>
						</div>
						<h2 class="pillhead">VPS & Server management</h2>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills node">Node.JS/NPM</div>
							<div class="pills github">Git/Github</div>
							<div class="pills html5">AWS</div>
						</div>
						<div style="margin-top:0.8rem;" class="grid grid-flow-col auto-cols-max gap-1">
							<div class="pills astrojs">Cloudflare CDN</div>
							<div class="pills joomla">Linux Server</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.pills {padding: 0.5rem 1rem;gap: 0.5rem;color: var(--accent-text-over);border-radius: 999rem;font-size: var(--text-md);line-height: 1.35;white-space: nowrap;}
	.pillnav{display: grid;}
	.pillhead{font-size: var(--text-lg);margin-top:1rem;}
	.html5{border: 1px solid var(--html5-100);background-color: var(--html5-100);}
	.css3{border: 1px solid var(--css3-100);background-color: var(--css3-100);}
	.js{border: 1px solid var(--js-100);background-color: var(--js-100);}
	.java{border: 1px solid var(--java-100);background-color: var(--java-100);}
	.php{border: 1px solid var(--php-100);background-color: var(--php-100);}
	.jquery{border: 1px solid var(--jquery-100);background-color: var(--jquery-100);}
	.angular{border: 1px solid var(--angular-100);background-color: var(--angular-100);}
	.node{border: 1px solid var(--node-100);background-color: var(--node-100);}
	.python{border: 1px solid var(--python-100);background-color: var(--python-100);}
	.ruby{border: 1px solid var(--ruby-100);background-color: var(--ruby-100);}
	.react{border: 1px solid var(--react-100);background-color: var(--react-100);}
	.sql{border: 1px solid var(--sql-100);background-color: var(--sql-100);}
	.pinescript{border: 1px solid var(--pinescript-100);background-color: var(--pinescript-100);}
	.tailwind{border: 1px solid var(--tailwind-100);background-color: var(--tailwind-100);}
	.sass{border: 1px solid var(--sass-100);background-color: var(--sass-100);}
	.twig{border: 1px solid var(--twig-100);background-color: var(--twig-100);}
	.bootstrap{border: 1px solid var(--bootstrap-100);background-color: var(--bootstrap-100);}
	.google{border: 1px solid var(--google-100);background-color: var(--google-100);}
	.peoplesoft{border: 1px solid var(--peoplesoft-100);background-color: var(--peoplesoft-100);}
	.github{border: 1px solid var(--github-100);background-color: var(--github-100);}
	.adobe{border: 1px solid var(--adobe-100);background-color: var(--adobe-100);}
	.wordpress{border: 1px solid var(--wordpress-100);background-color: var(--wordpress-100);}
	.drupal{border: 1px solid var(--drupal-100);background-color: var(--drupal-100);}
	.joomla{border: 1px solid var(--joomla-100);background-color: var(--joomla-100);}
	.astrojs{border: 1px solid var(--astrojs-100);background-color: var(--astrojs-100);}
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>


